<% for(var i = 0; i < floods.length; i++) { %>
<tr>
    <td><%= i + 1 %></td>
    <td><%= floods[i].name %></td>
    <td><%= floods[i].email %></td>
    <td><%= floods[i].gender %></td>
    <td><%= floods[i].status %></td>
    <td>
        <a href="/update-flood?id=<%= floods[i]._id%>" class="btn border-shadow update">
            <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
        </a>
        <a class="btn border-shadow delete" data-id=<%= floods[i]._id%> >
            <span class="text-gradient"><i class="fas fa-times"></i></span>
        </a>
    </td>
</tr>
<% } %>